<h1><%= @page.title %></h1>
<%= @page.html_body %>

<% content_for :sidebar do -%>
  <div id="last_commit">
    <div class="gravatar">
      <%= gravatar_for @page.author, :size => 32 %>
    </div>
    <div class="author">
      <%= @page.author.name %>
    </div>
    <div class="date">
      <%= distance_of_time_in_words_to_now @page.committed_date %> ago
    </div>
    <div class="message">
      <%= @page.message %>
    </div>
  </div>
  <ul id="show_page">
    <% if logged_in? -%>
      <li><%= link_to "Edit", edit_page_url(@page) %></li>
    <% end -%>
    <li><%= link_to "History", page_history_url(@page) %></li>
  </ul>
<% end -%>
